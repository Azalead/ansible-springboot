[Unit]
Description={{ springboot_application_name }}
After=syslog.target

[Service]
User={{ springboot_user }}
Restart=on-failure
Type=forking
ExecStart={{ springboot_deploy_folder }}/{{ springboot_application_name }}.{{ springboot_application_type }} start
ExecStop={{ springboot_deploy_folder }}/{{ springboot_application_name }}.{{ springboot_application_type }} stop
ExecReload={{ springboot_deploy_folder }}/{{ springboot_application_name }}.{{ springboot_application_type }} reload
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
